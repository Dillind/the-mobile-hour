<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>The Mobile Hour - Product Admin Create</title>
  </head>
  <body>
    <!-- Header / nav -->
    <%- include("partials/admin_navigation.ejs", { accessRole }) %>
    <h1 class="admin-title">Create Product</h1>
    <section class="admin-section">
      <!-- Order Admin Navigation -->
      <nav class="order-admin-nav">
        <a href="/product_admin">View Products</a>
        <a href="/product_admin_create">Create Product</a>
      </nav>
      <form action="/create_product" method="post" class="create-form">
        <!-- Product Name -->
        <label for="name">Product Name:</label>
        <input
          type="text"
          name="product_name"
          class="create-form-input"
          placeholder="Enter product name:"
          required
        />
        <!-- Product Model -->
        <label for="model">Product Model:</label>
        <input
          type="text"
          name="product_model"
          class="create-form-input"
          placeholder="Enter the product model"
          required
        />
        <!-- Product Manufacturer -->
        <label for="manufacturer">Product Manufacturer:</label>
        <input
          type="text"
          name="product_manufacturer"
          class="create-form-input"
          placeholder="Enter the product manufacturer"
          required
        />
        <!-- Product Price -->
        <label for="price">Product Price:</label>
        <input
          type="number"
          name="product_price"
          class="create-form-input"
          placeholder="Enter the product price"
          required
        />
        <!-- Product Stock -->
        <label for="stock">Product Stock:</label>
        <input
          type="number"
          name="product_stock"
          class="create-form-input"
          placeholder="Enter the product stock quantity"
          required
        />

        <!-- Product Description -->
        <label for="description">Product Description:</label>
        <textarea
          name="product_description"
          id="product-description"
          class="create-form-input"
          cols="30"
          rows="10"
        ></textarea>

        <!-- Product Feature ID -->
        <label for="feature-id">Feature ID:</label>
        <select name="product_feature_id" class="create-form-input">
          <% for (let productStaff of productsStaff) { %>
          <option value="<%= productStaff.product_feature_id %>">
            <%= productStaff.product_name %> - <%=
            productStaff.product_feature_id %>
          </option>
          <% } %>
        </select>

        <input
          type="submit"
          value="Create Product"
          class="button-primary button"
        />
      </form>
    </section>
    <!--  Footer -->
    <%- include("partials/footer.ejs") %>
  </body>
</html>
