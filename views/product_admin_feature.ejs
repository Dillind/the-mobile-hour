<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>The Mobile Hour - Feature Admin</title>
  </head>
  <body>
    <!-- Header / nav -->
    <%- include("partials/admin_navigation.ejs", { accessRole }) %>
    <h1 class="admin-title">Feature Admin</h1>
    <section class="admin-section">
      <nav class="admin-nav">
        <a href="/product_admin">View Products</a>
        <a href="/product_admin_create">Create Product</a>
        <a href="/product_admin_feature">View Features</a>
        <a href="/product_admin_create_feature">Create Feature</a>
      </nav>
      <section class="column-5 data-grid">
        <span class="column-heading">Feature ID</span>
        <!-- Feature OS -->
        <span class="column-heading">OS</span>
        <!-- Feature Colour -->
        <span class="column-heading">Colour</span>
        <!-- Feature Weight -->
        <!-- Updated By -->
        <span class="column-heading">Updated By</span>
        <!-- Edit Btn-->
        <span></span>
        <% for (let feature of features) { %>
        <span><%= feature.id %></span>
        <span><%= feature.OS %></span>
        <span><%= feature.color %></span>
        <span><%= accessRole %></span>
        <a
          href="/product_admin_feature?edit_id=<%= feature.id%>"
          class="button-primary button"
          >Edit
        </a>
        <% } %>
      </section>
      <article class="form-container">
        <form action="/edit_feature" method="post" class="edit-form">
          <input
            type="hidden"
            name="feature_id"
            value="<%= editFeature.id %>"
          />

          <!-- Feature Colour -->
          <label for="color">Colour:</label>
          <input
            type="text"
            name="color"
            class="create-form-input"
            value="<%= editFeature.color %>"
          />

          <!-- Feature Weight -->
          <label for="weight">Weight (grams):</label>
          <input
            type="text"
            name="weight"
            class="create-form-input"
            value="<%= editFeature.weight %>"
          />

          <!-- Feature Dimensions -->
          <label for="dimensions">Dimensions (inches):</label>
          <input
            type="text"
            name="dimensions"
            class="create-form-input"
            value="<%= editFeature.dimensions %>"
          />

          <!-- Feature OS -->
          <label for="OS">OS:</label>
          <input
            type="text"
            name="OS"
            class="create-form-input"
            value="<%= editFeature.OS %>"
          />

          <!-- Feature Screensize -->
          <label for="screensize">Screensize (inches):</label>
          <input
            type="text"
            name="screensize"
            class="create-form-input"
            value="<%= editFeature.screensize %>"
          />

          <!-- Feature Resolution -->
          <label for="resolution">Resolution (pixels):</label>
          <input
            type="text"
            name="resolution"
            class="create-form-input"
            value="<%= editFeature.resolution %>"
          />

          <!-- Feature CPU -->
          <label for="CPU">CPU:</label>
          <input
            type="text"
            name="CPU"
            class="create-form-input"
            value="<%= editFeature.CPU %>"
          />

          <!-- Feature RAM -->
          <label for="RAM">RAM (GB):</label>
          <input
            type="text"
            name="RAM"
            class="create-form-input"
            value="<%= editFeature.RAM %>"
          />

          <!-- Feature Storage -->
          <label for="storage">Storage (GB):</label>
          <input
            type="text"
            name="storage"
            class="create-form-input"
            value="<%= editFeature.storage %>"
          />

          <!-- Feature Battery -->
          <label for="battery">Battery (mAH):</label>
          <input
            type="text"
            name="battery"
            class="create-form-input"
            value="<%= editFeature.battery %>"
          />

          <!-- Feature Rear Camera -->
          <label for="rear_camera">Rear Camera (MP):</label>
          <input
            type="text"
            name="rear_camera"
            class="create-form-input"
            value="<%= editFeature.rear_camera %>"
          />

          <!-- Feature Front Camera -->
          <label for="front_camera">Front Camera (MP):</label>
          <input
            type="text"
            name="front_camera"
            class="create-form-input"
            value="<%= editFeature.front_camera %>"
          />
          <article class="action-btns">
            <input
              type="submit"
              name="action"
              value="update"
              class="button-primary button"
            />
            <% if (!editFeature.id == "0" ) { %>
            <input
              type="submit"
              class="button-primary button"
              name="action"
              value="delete"
            />
            <% } %>
          </article>
        </form>
      </article>
    </section>
    <!--  Footer -->
    <%- include("partials/footer.ejs") %>
  </body>
</html>
